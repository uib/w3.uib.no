 */
function uib_calendar2_block_view($delta='') {
  $block = array();
  if ($delta == 'cal2form') {
    $block['content'] = array(
      'form' => drupal_get_form('uib_calendar2_form'),
      'more' => array('#markup' => '<br><hr>'),
    );
