/**
 * Generates the render array for the top level calendar page.
 */
function uib_calendar2__index_page() {
  $page = array();
  $formatted_date = format_date(time(), 'day_and_month');
  $page['header'] = array('#markup' => "<h1>Calendar for UIB - " . $formatted_date . "</h1>");

  $form = drupal_get_form('uib_calendar2_form');
  $event_types = $form['event']['type']['#value'];
  $dayOfYear = $form['datepicker']['#value']['date'];
  $langVal = $form['language']['#value'];

  $nodes = get_event_nodes($event_types, $dayOfYear, $langVal, 0, 0);
  $printDate = date('Y-m-00');
  $lastItemPrintDate = "";
  $lastItemPrintTime = "";

  $j = date('j',strtotime($dayOfYear));
  $n = date('n',strtotime($dayOfYear));
  $y = date('Y',strtotime($dayOfYear));
  $selectedDate = mktime(0,0,0,$n,$j,$y);

  foreach ($nodes as $node) {
    $date = date('M d Y',strtotime($node->date1));
    $time = date('H.i',strtotime($node->date1.'GMT'));

    $createdTime = mktime(intval(date('HisjnY',strtotime($node->date1.'GMT'))));

    if ($date != $printDate) {
      $page[$node->date1] = array('#markup' => '<h2 style=clear:both>' . format_date($createdTime, 'day_and_month') . '</h2>');
      $printDate = $date;
    }
    $page[$node->nid] = array('#markup' => '<li>' . format_date($createdTime,'time') . ' : ' . l($node->title, "node/$node->nid") . '</li>');
    $lastItemPrintDate = substr($node->date1,0,10);
    $lastItemPrintTime = $node->date1;
  }

  if ($lastItemPrintDate != "" && $lastItemPrintTime != "") {
    $nodesLastDay = get_event_nodes($event_types, $lastItemPrintTime, $langVal, 0, 1);
    foreach ($nodesLastDay as $node) {
      $time = date('H.i',strtotime($node->date1.'GMT'));
      $page[$node->nid] = array('#markup' => '<li>' . format_date($createdTime,'time') . ' : ' . l($node->title, "node/$node->nid") . '</li>');
    }
  }
  $page['multiday'] = array('#markup' =>
    '<h2 style=clear:both>'
    . t('Multiday events running ')
    . format_date($selectedDate, 'day_and_month') 
    . '</h2>');
  $nodesMulti = get_event_nodes($event_types, $dayOfYear, $langVal, 1, 0);
  foreach ($nodesMulti as $node) {
    $page[$node->nid] = array('#markup' => '<li>' . l($node->title, "node/$node->nid") . '</li>');
  }
  return $page;
}

