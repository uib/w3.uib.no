function get_event_nodes($event_types, $date, $language, $multidayevent, $lastday) {
  $sqlOptions = array();
  $day_not = "";
  if ($multidayevent)
    $day_not = "NOT";

  $langVal = "nb";
  if (is_numeric($language) && $language==1) {
    $langVal = "en";
  }

  $sql = "SELECT node.title,node.nid,field_uib_date_value as date1, field_uib_date_value2 as date2
        FROM field_data_field_uib_article_type,field_data_field_uib_date,node,field_data_field_uib_event_type
        WHERE field_uib_article_type_value like 'event'
        AND field_data_field_uib_article_type.entity_id = node.nid
        AND field_data_field_uib_date.entity_id = node.nid
        AND field_data_field_uib_event_type.entity_id = node.nid
        AND substring(cast (field_uib_date_value as text) from 1 for 10) $day_not LIKE substring(cast (field_uib_date_value2 as text) from 1 for 10)";

  if ($language != 0) {
    $sql .= " AND node.language like :lang ";
    $sqlOptions[":lang"] = $langVal;
  }

  $sqlOptions[":day"] = substr($date,0,10);
  if (!$multidayevent && !$lastday) {
    $sql .= " AND field_data_field_uib_date.field_uib_date_value >= :day ";
  }
  elseif ($multidayevent && !$lastday) {
    $sql .= " AND field_data_field_uib_date.field_uib_date_value2 >= :day AND :day >= field_data_field_uib_date.field_uib_date_value ";
  }
  elseif (!$multidayevent && $lastday) {
    $sql .= " AND substring(cast (field_uib_date_value as text) from 1 for 10) = :day AND field_uib_date_value > :lastPrintTime ";
    $sqlOptions[":lastPrintTime"] = $date;
  }

  if (!empty($event_types) && !in_array("any", $event_types)) {
    $sql .= " AND field_data_field_uib_event_type.field_uib_event_type_value IN (:eventtypes)";
    $sqlOptions[":eventtypes"] = array_values($event_types);
  }

  if ($multidayevent) {
    $sql .= " ORDER BY field_uib_date_value2 ASC";
  }
  else {
    $sql .= " ORDER BY field_uib_date_value ASC LIMIT 20";
  }

  return db_query($sql, $sqlOptions)->fetchAll();
}
