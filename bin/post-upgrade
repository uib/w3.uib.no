#!/bin/bash

# This script runs at the end of the upgrade process to the next release.
# It can be use to perform migrations or other manipulations of the content
# and configuration of the site.

if [ $(pwd) == '/var/www/w3-prestaging.test.uib.no' ] ;then
    bin/site-drush en --yes uib_w3
    bin/site-drush vset theme_default uib_w3
fi

REL=30

if git tag | grep -q R$REL; then
    echo "Disabled after $REL has been released";
    exit 1
fi

set -x

date +%FT%T
bin/site-drush node-revision-delete --show-deleted --verbose uib_article 50
date +%FT%T
bin/site-drush node-revision-delete --show-deleted --verbose uib_testimonial 50
date +%FT%T
bin/site-drush node-revision-delete --show-deleted --verbose area 50
date +%FT%T

bin/site-drush cc all
date +%FT%T
